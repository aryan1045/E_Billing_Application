<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient Background -->
    <gradient
        android:type="linear"
        android:angle="90"
        android:startColor="#FFDEE9"
    android:centerColor="#B5FFFC"
    android:endColor="#FFDEE9"
    android:gradientRadius="500"/>



    <!-- Stroke (Border) -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF"/> <!-- White Border -->

    <!-- Padding (Gives a premium spacing effect) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>

</shape>
